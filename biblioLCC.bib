	keywords = {Determinants, Excitation energies, Quantum Monte Carlo methods, Stochastic processes, Wave functions},
	pages = {244117},
	file = {Full Text PDF:/home/jeanmairet/.mozilla/firefox/lcniwavn.default/zotero/storage/B6DPB4FX/Overy et al. - 2014 - Unbiased reduced density matrices and electronic p.pdf:application/pdf;Snapshot:/home/jeanmairet/.mozilla/firefox/lcniwavn.default/zotero/storage/CP6MMGA5/1.html:text/html}
