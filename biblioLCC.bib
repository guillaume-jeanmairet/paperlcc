	file = {1-s2.0-000926149285419B-main.pdf:/home/jeanmairet/.mozilla/firefox/lcniwavn.default/zotero/storage/9J6KA5B9/1-s2.0-000926149285419B-main.pdf:application/pdf;ScienceDirect Snapshot:/home/jeanmairet/.mozilla/firefox/lcniwavn.default/zotero/storage/XAX98DZ8/000926149285419B.html:text/html}
}

